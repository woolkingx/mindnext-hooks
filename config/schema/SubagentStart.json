{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mindnext.dev/schema/SubagentStart.json",
  "title": "SubagentStart Hook API",
  "description": "子代理啟動時事件的完整 API 定義",
  "examples": {
    "event_example": {
      "hook_event_name": "SubagentStart",
      "session_id": "abc-123",
      "transcript_path": "/home/user/.claude/transcripts/xyz.jsonl",
      "cwd": "/home/user/project",
      "permission_mode": "default",
      "agent_id": "agent-123",
      "agent_type": "code-review"
    },
    "response_context_example": {
      "hookSpecificOutput": {
        "hookEventName": "SubagentStart",
        "additionalContext": "子代理已啟動，加載相關上下文資訊"
      }
    },
    "rule_context_example": {
      "name": "subagent-warmup",
      "description": "子代理啟動時加載上下文",
      "enabled": true,
      "event": "SubagentStart",
      "match": "code-review",
      "action": "context",
      "reason": "載入審查相關的代碼風格指南"
    }
  },
  "definitions": {
    "event": {
      "title": "SubagentStart Event Input",
      "description": "從 Claude Code stdin 接收的 payload",
      "x-usage": "子代理啟動時觸發，用於上下文和監控",
      "x-canBlock": false,
      "type": "object",
      "required": [
        "cwd",
        "transcript_path",
        "hook_event_name",
        "session_id",
        "permission_mode"
      ],
      "properties": {
        "hook_event_name": {
          "type": "string",
          "const": "SubagentStart",
          "description": "事件名稱"
        },
        "session_id": {
          "type": "string",
          "description": "會話 ID"
        },
        "transcript_path": {
          "type": "string",
          "description": "對話記錄路徑"
        },
        "cwd": {
          "type": "string",
          "description": "當前工作目錄"
        },
        "agent_id": {
          "type": "string",
          "description": "代理 ID"
        },
        "agent_type": {
          "type": "string",
          "description": "代理類型"
        },
        "permission_mode": {
          "type": "string",
          "enum": [
            "default",
            "plan",
            "acceptEdits",
            "dontAsk",
            "bypassPermissions"
          ],
          "description": "權限模式"
        }
      },
      "additionalProperties": false
    },
    "response": {
      "title": "SubagentStart Response Output",
      "description": "輸出到 Claude Code stdout 的 JSON",
      "type": "object",
      "properties": {
        "continue": {
          "type": "boolean",
          "description": "false 時完全停止 Claude"
        },
        "stopReason": {
          "type": "string",
          "description": "停止原因 (給用戶)"
        },
        "suppressOutput": {
          "type": "boolean",
          "description": "隱藏輸出"
        },
        "systemMessage": {
          "type": "string",
          "description": "警告消息 (給用戶)"
        },
        "hookSpecificOutput": {
          "type": "object",
          "description": "SubagentStart 專用輸出",
          "properties": {
            "hookEventName": {
              "type": "string",
              "const": "SubagentStart",
              "description": "事件名稱 (必填)"
            },
            "additionalContext": {
              "type": "string",
              "description": "額外上下文資訊"
            }
          },
          "required": [
            "hookEventName"
          ]
        }
      },
      "additionalProperties": false
    },
    "rule": {
      "title": "SubagentStart Rule Config",
      "description": "config/rules/*.md 中的 YAML frontmatter",
      "type": "object",
      "required": [
        "name",
        "description",
        "enabled",
        "event"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Rule 唯一名稱"
        },
        "description": {
          "type": "string",
          "description": "Rule 說明"
        },
        "enabled": {
          "type": "boolean",
          "description": "是否啟用"
        },
        "event": {
          "type": "string",
          "const": "SubagentStart",
          "description": "事件類型"
        },
        "priority": {
          "type": "integer",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "執行優先級 (0-100，數字越大優先級越高)"
        },
        "match": {
          "oneOf": [
            {
              "type": "string",
              "description": "正則表達式匹配 task_description 或 subagent_type"
            },
            {
              "type": "object",
              "description": "結構化匹配條件"
            }
          ]
        },
        "action": {
          "type": "string",
          "enum": [
            "context"
          ],
          "description": "執行動作 (只支援 context)"
        },
        "reason": {
          "type": "string",
          "description": "動作原因"
        }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/event"
    },
    {
      "$ref": "#/definitions/response"
    },
    {
      "$ref": "#/definitions/rule"
    }
  ]
}
