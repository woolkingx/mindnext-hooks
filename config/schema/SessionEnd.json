{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mindnext.dev/schema/SessionEnd.json",
  "title": "SessionEnd Hook API",
  "description": "會話結束事件的完整 API 定義 (Input + Output + Rule)",
  "examples": {
    "event_clear_example": {
      "hook_event_name": "SessionEnd",
      "session_id": "abc-123",
      "transcript_path": "/home/user/.claude/transcripts/xyz.jsonl",
      "cwd": "/home/user/project",
      "permission_mode": "default",
      "reason": "clear"
    },
    "event_logout_example": {
      "hook_event_name": "SessionEnd",
      "session_id": "abc-123",
      "transcript_path": "/home/user/.claude/transcripts/xyz.jsonl",
      "cwd": "/home/user/project",
      "permission_mode": "default",
      "reason": "logout"
    },
    "response_context_example": {
      "hookSpecificOutput": {
        "hookEventName": "SessionEnd",
        "additionalContext": "會話已結束，已保存至 /home/user/.claude/transcripts/xyz.jsonl"
      }
    },
    "rule_context_example": {
      "name": "log-session-end",
      "description": "記錄會話結束事件",
      "enabled": true,
      "event": "SessionEnd",
      "priority": 50,
      "match": "logout",
      "action": "context",
      "reason": "用戶登出時的清理操作"
    }
  },
  "definitions": {
    "event": {
      "title": "SessionEnd Event Input",
      "description": "從 Claude Code stdin 接收的 payload",
      "x-usage": "會話結束時觸發，用於清理和日誌記錄 (無輸出控制)",
      "x-canBlock": false,
      "type": "object",
      "required": [
        "cwd",
        "transcript_path",
        "reason",
        "hook_event_name",
        "session_id"
      ],
      "properties": {
        "hook_event_name": {
          "type": "string",
          "const": "SessionEnd",
          "description": "事件名稱"
        },
        "session_id": {
          "type": "string",
          "description": "會話 ID"
        },
        "transcript_path": {
          "type": "string",
          "description": "對話記錄路徑"
        },
        "cwd": {
          "type": "string",
          "description": "當前工作目錄"
        },
        "reason": {
          "type": "string",
          "enum": [
            "clear",
            "logout",
            "prompt_input_exit",
            "other"
          ],
          "description": "會話結束原因"
        },
        "permission_mode": {
          "type": "string",
          "enum": [
            "default",
            "plan",
            "acceptEdits",
            "dontAsk",
            "bypassPermissions"
          ],
          "description": "權限模式"
        }
      },
      "additionalProperties": false
    },
    "response": {
      "title": "SessionEnd Response Output",
      "description": "輸出到 Claude Code stdout 的 JSON (無輸出控制，僅支持上下文和系統控制)",
      "type": "object",
      "properties": {
        "continue": {
          "type": "boolean",
          "description": "false 時停止後續操作"
        },
        "stopReason": {
          "type": "string",
          "description": "停止原因"
        },
        "suppressOutput": {
          "type": "boolean",
          "description": "隱藏輸出"
        },
        "systemMessage": {
          "type": "string",
          "description": "系統消息"
        }
      },
      "additionalProperties": false
    },
    "rule": {
      "title": "SessionEnd Rule Config",
      "description": "config/rules/*.md 中的 YAML frontmatter",
      "type": "object",
      "required": [
        "name",
        "description",
        "enabled",
        "event"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Rule 唯一名稱",
          "pattern": "^[a-z0-9-]+$"
        },
        "description": {
          "type": "string",
          "description": "Rule 說明"
        },
        "enabled": {
          "type": "boolean",
          "description": "是否啟用"
        },
        "event": {
          "type": "string",
          "const": "SessionEnd",
          "description": "事件類型"
        },
        "priority": {
          "type": "integer",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "執行優先級 (越大越先執行)"
        },
        "match": {
          "oneOf": [
            {
              "type": "string",
              "description": "Regex 匹配 reason 欄位"
            },
            {
              "type": "object",
              "description": "結構化匹配"
            }
          ]
        },
        "action": {
          "type": "string",
          "enum": [
            "context"
          ],
          "description": "執行動作 (SessionEnd 僅支持 context)"
        },
        "reason": {
          "type": "string",
          "description": "動作原因"
        }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/event"
    },
    {
      "$ref": "#/definitions/response"
    },
    {
      "$ref": "#/definitions/rule"
    }
  ]
}
